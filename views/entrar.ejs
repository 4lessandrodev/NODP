<!--Importar o head padrão para todas as páginas-->
<%- include("./includes/head") -%>
<!--Importar o css exclusivo da página que está sendo desenvolvida-->
<link rel='stylesheet' href='/css/cadastro.css' />
<!--Tag de fechamento do head que ficou aberto para possibilitar importar o css da página-->
</head>

<!--Códigos da página-->

<body id="cadastro">
  <div class="row">
    
    <div class="col background">
    </div>
    
    <div class="login col-lg-4 col-md-8 col-sm-12">
      <form action="/home" method="">
        
        <img src="/img/logo-rocho-letra.png" alt="logo" class="logo-letra" id="logo">
        <h1 class="titulo">Entrar</h1>
        
        <div class="form-group">
          <label for="email" class="subtitulo">Email</label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="senha" class="subtitulo">Senha</label>
          <input type="password" class="form-control" id="senha" required>
        </div>
        <button type="button" class="btn-1-l">Cadastrar</button>
        <button type="submit" class="btn-1-d" onclick="location.href='/home'">Entrar</button>
      </form>
    </div>
  </div>
  
  <!--Importando o arquivo scripts-->
  <%- include('./includes/scripts')-%>
  <!-- Importando o arquivo footer-->